@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" model="Model.StatusMessage" />
<form id="profile-form" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row mt-2">
        <div class="col-md-6">
            <label class="labels" asp-for="Input.First_Name"></label>
            <input asp-for="Input.First_Name" class="form-control" />
            <span asp-validation-for="Input.First_Name" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="labels" asp-for="Input.Last_Name"></label>
            <input asp-for="Input.Last_Name" class="form-control" />
            <span asp-validation-for="Input.Last_Name" class="text-danger"></span>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-12">
            <label class="labels" asp-for="Input.PhoneNumber"></label>
            <input asp-for="Input.PhoneNumber" class="form-control" />
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="col-md-12">
            <label class="labels" asp-for="Input.PhotoProfileIFormFile"></label>
            <input asp-for="Input.PhotoProfileIFormFile" class="form-control" />
            <span asp-validation-for="Input.PhotoProfileIFormFile" class="text-danger"></span>
        </div>
    </div>
        <div class="mt-5 text-center"><button id="update-profile-button" type="submit" class="btn btn-primary">Save</button></div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

