@model TimeTrackingSystem.Application.ViewModels.Employee.NewEmployeeViewModel

@{
    ViewData["Title"] = "AddEmployee";
}

<h1>AddEmployee</h1>

<h4>NewEmployeeViewModel</h4>
<hr />
